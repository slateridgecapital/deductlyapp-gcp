# Property Tax Calculator - Environment Variables
# App: property-tax | Service: calculator
# Copy this file to .env and fill in your values

# ===========================================
# GCP Configuration
# ===========================================

# GCP Project ID (shared across all Deductly apps)
GCP_PROJECT_ID=deductlyapp

# GCP Region for Cloud Functions and resources
GCP_REGION=us-central1

# ===========================================
# Firestore Configuration
# ===========================================
# Collection follows naming convention: property_tax_{entity}

# Main collection for property data (stores latest scrape + version history)
FIRESTORE_COLLECTION=property_tax_properties

# ===========================================
# Cache Configuration
# ===========================================

# Cache duration for property data (in days)
# Data older than this will trigger a new scrape
CACHE_TTL_DAYS=30

# Enable/disable caching (set to 'false' to always scrape fresh data)
ENABLE_CACHE=true

# ===========================================
# Property Data API Keys
# ===========================================

# Apify API - Zillow property scraper (maxcopell/zillow-detail-scraper)
# Get your API key from https://console.apify.com/account/integrations
APIFY_API_KEY=your_apify_api_key_here

# ===========================================
# Service Configuration
# ===========================================

# External API request timeout (in milliseconds)
REQUEST_TIMEOUT_MS=10000

# Maximum retry attempts for failed API requests
MAX_RETRIES=3

# Logging level: debug, info, warn, error
LOG_LEVEL=debug

# ===========================================
# Local Development Only
# ===========================================

# Port for local development server
PORT=8080

# Set to 'development' for local testing
NODE_ENV=development
